# Claude API Layer Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here
DEBUG=false

# Claude Settings
CLAUDE_BINARY=claude
CLAUDE_MODEL=sonnet
CLAUDE_FALLBACK_MODEL=haiku
CLAUDE_MAX_TURNS=10
CLAUDE_TIMEOUT=300

# Session Settings
SESSION_TTL=86400
SESSION_CLEANUP_INTERVAL=3600

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./data/sessions.db

# Sandbox Settings
SANDBOX_TYPE=docker
SANDBOX_TIMEOUT=60
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0

# Git Settings
GIT_AUTO_COMMIT=false
GIT_COMMIT_PREFIX=[claude-api]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
